<header>
  <h1>{{ shop.name }}</h1>

  <ul>
    {% for link in linklists.main-menu.links %}
      <li>
        {{ link.title | link_to: link.url }}
      </li>
      {% comment %} <a href="{{ link.url }}">my own link: {{ link.title }}</a> {% endcomment %}
    {% endfor %}
  </ul>
  <div>
    THe current page is: {{ page.title }}
  </div>
  <div>
    {% assign textArray = "Hello,my,name,is,bob" | split: ',' %}
    {% for text in textArray %}
      {{ text }}
    {% endfor %}
  </div>
</header>